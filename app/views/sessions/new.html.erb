<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5 d-flex justify-content-center">
        <img alt="Sample image" class="img-fluid" src="<%= image_path("books.png") %>" style="max-width: 1000px;"/>
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <div class="container my-form-container">
          <form action="<%= sessions_path %>" class="form-border border p-3 border-dark" method="post">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <div class="form-outline mb-4">
              <input class="form-control form-control-lg" id="form3Example3" name="user[email]" placeholder="Email..." type="email" value="<%= @user.email %>"></input>
              <label class="form-label" for="form3Example3">Email address</label>
            </div>
            <div class="form-outline mb-3">
              <input class="form-control form-control-lg" id="form3Example4" name="user[password]" placeholder="Password..." type="password" value="<%= @user.password %>"></input>
              <label class="form-label" for="form3Example4">Password</label>
            </div>
            <div class="text-center text-lg-start mt-4 pt-2">
              <div class="d-flex justify-content-center"> <!-- Add this div -->
                <button class="btn btn-warning btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;" type="submit">Login</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div> 
  </div>
</section>
